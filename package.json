{
	"name": "translateassistant",
	"displayName": "Translate Assistant for Double Line TxT Files",
	"publisher": "jsc723",
	"icon": "assets/logo.png",
	"description": "",
	"version": "1.1.0",
	"engines": {
		"vscode": "^1.47.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:dltxt",
		"onCommand:Extension.setGame",
		"onCommand:Extension.context_menu_insert",
		"onCommand:Extension.context_menu_update"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "dltxt",
				"aliases": [
					"Double Line TXT for translation"
				],
				"extensions": [
					".txt"
				]
			}
		],
		"grammars": [
			{
				"language": "dltxt",
				"scopeName": "source.txt",
				"path": "./syntaxes/dltxt.tmLanguage.json"
			}
		],
		"themes": [
			{
				"label": "DLTXT Dark+",
				"uiTheme": "vs-dark",
				"path": "themes/dltxt_dark.json"
			}
		],
		"colors": [
			{
				"id": "myextension.largeNumberBackground",
				"description": "Background decoration color for large numbers",
				"defaults": {
					"dark": "#FF000055",
					"light": "#FF000055",
					"highContrast": "#FF000055"
				}
			}
		],
		"commands": [
			{
				"command": "Extension.dltxt.sync_database",
				"title": "DLTXT: 拉取云端数据"
			},
			{
				"command": "Extension.dltxt.context_menu_insert",
				"title": "DLTXT: 添加词条"
			},
			{
				"command": "Extension.dltxt.context_menu_update",
				"title": "DLTXT: 更新词条"
			},
			{
				"command": "Extension.extract_single_line",
				"title": "DLTXT: 从双行文本中提取单行译文"
			},
			{
				"command": "Extension.merge_into_double_line",
				"title": "DLTXT: 将单行译文应用至双行文本"
			},
			{
				"command": "Extension.dltxt.setGame",
				"title": "DLTXT: 输入当前项目名称"
			},
			{
				"command": "Extension.dltxt.next",
				"title": "DLTXT: 移动到下一行翻译"
			},
			{
				"command": "Extension.dltxt.prev",
				"title": "DLTXT: 移动到上一行翻译"
			}
		],
		"keybindings":[
			{
				"command": "Extension.dltxt.next",
				"key": "alt+enter"
			},
			{
				"command": "Extension.dltxt.prev",
				"key": "alt+\\"
			},
			{
				"command": "Extension.dltxt.next",
				"key": "ctrl+enter"
			},
			{
				"command": "Extension.dltxt.prev",
				"key": "ctrl+\\"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "editorHasSelection",
					"command": "Extension.dltxt.context_menu_insert"
				},
				{
					"when": "editorHasSelection",
					"command": "Extension.dltxt.context_menu_update"
				}
			]
		},
		"configuration": {
      "title": "dltxt",
      "properties": {
				"dltxt.remoteHost": {
					"type": "string",
					"default": "https://jsccsj.com",
					"description": "url of the remote host"
				},
				"dltxt.userName": {
					"type": "string",
					"description": "Username of the remote service host"
				},
				"dltxt.apiToken": {
					"type": "string",
					"description": "APIToken that can be found on your homepage of the remote host"
				},
        "dltxt.originalTextPrefixRegex": {
          "type": "string",
          "default": "(\\[[a-z0-9]+\\])|((★|○)[a-z0-9]+(★|○))|((<\\d+>)?//))",
          "description": "Original Text Prefix"
        },
        "dltxt.translatedTextPrefixRegex": {
          "type": "string",
          "default": "(;\\[[a-z0-9]+\\])|((☆|●)[a-z0-9]+(☆|●))|(<\\d+>(?!//))|((//[^\n]*\n)(?!<\\d+>))",
          "description": "Translated Text Prefix"
				},
				"dltxt.showKeywordHighlight": {
					"type": "boolean",
					"default": true,
					"description": "Show highlight or not"
				}
      }
    }
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.47.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"axios": "^0.19.2",
		"request": "^2.88.2"
	},
	"repository": {
    "type": "git",
    "url": "https://github.com/jsc723/translation-assistant.git"
  }
}
